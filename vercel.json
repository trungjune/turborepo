{
  "version": 2,
  "builds": [
    {
      "src": "apps/server/src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/client/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/apps/server/src/main.ts",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "PATCH",
        "DELETE",
        "HEAD",
        "OPTIONS"
      ]
    }
  ]
}
